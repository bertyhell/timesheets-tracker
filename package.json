{
  "name": "timesheets-tracker",
  "version": "1.0.0",
  "description": "Track active window and tag activities to easily track timesheets",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bump": "npx bump-package-versions --part=patch --strategy=highest ./package.json ./api/package.json ./client/package.json",
    "create-exe--build-js": "cd api && npm run build",
    "create-exe--create-blob": "node --experimental-sea-config exe-config.json",
    "create-exe--copy-node": "node -e \"require('fs').copyFileSync(process.execPath, 'dist-exe/timesheet-tracker.exe')\"",
    "create-exe--create-exe": "npx postject dist/timesheet-tracker.exe NODE_SEA_BLOB dist/exe-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "create-exe": "npm run create-exe--build-js && npm run create-exe--create-blob && npm run create-exe--copy-node && npm run create-exe--create-exe"
  },
  "author": "Bert Verhelst",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "bump-package-versions": "^1.0.7",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "esbuild": "^0.20.1"
  }
}
